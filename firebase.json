{
  "firestore": {
    "indexes": ".firebase/firestore.indexes.json",
    "rules": ".firebase/firestore.rules"
  },
  "storage": {
    "rules": ".firebase/storage.rules"
  },
  "hosting": [
    {
      "target": "production",
      "public": "public/dashboard",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "!/sitemap",
          "run": {
            "serviceId": "cannlytics-cannabis-data",
            "region": "us-central1"
          }
        },
        {
          "source": "!/static",
          "run": {
            "serviceId": "cannlytics-cannabis-data",
            "region": "us-central1"
          }
        },
        {
          "source": "**",
          "run": {
            "serviceId": "cannlytics-cannabis-data",
            "region": "us-central1"
          }
        }
      ]
    },
    {
      "target": "dev",
      "public": "public/dashboard",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "!/sitemap",
          "run": {
            "serviceId": "cannlytics-cannabis-data-dev",
            "region": "us-central1"
          }
        },
        {
          "source": "!/static",
          "run": {
            "serviceId": "cannlytics-cannabis-data-dev",
            "region": "us-central1"
          }
        },
        {
          "source": "**",
          "run": {
            "serviceId": "cannlytics-cannabis-data-dev",
            "region": "us-central1"
          }
        }
      ]
    }
  ]
}
